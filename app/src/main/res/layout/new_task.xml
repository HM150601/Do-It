<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40dp">

    <EditText
        android:id="@+id/newTaskText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/new_task"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Button
        android:id="@+id/newTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newTaskText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="30dp"
        android:background="@android:color/transparent"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="134dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:text="Alarm" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="165dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:text="Hour" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="45dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:text="Minute" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="-56dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:text="Second" />

    <Spinner
        android:id="@+id/Hourspin"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="132dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:entries="@array/Hourspin" />

    <Spinner
        android:id="@+id/Minutespin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="29dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:entries="@array/Minutespin" />

    <Spinner
        android:id="@+id/Secondspin"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newTaskText"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="-93dp"
        android:layout_toStartOf="@+id/newTaskButton"
        android:entries="@array/Secondspinspin" />

</RelativeLayout>